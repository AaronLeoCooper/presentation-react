@require '_fonts'
@require '_variables'

/**
 * Resets
 */

*
  box-sizing border-box
  color inherit
  border 0
  outline 0
  margin 0
  padding 0
  font-size 34px
  text-decoration none
  sans-serif(300)
  line-height 160%

.sm
  font-size 75%
  line-height 20px



/**
 * Base
 */

html
  bg-body()
  overflow hidden
  height 7000px
  width 100%
  transform-origin 0 0

body
  width 100%
  height 100%
  color $body-colour

#main-cont
  width 100%
  height 100%
  color $body-colour
  transform rotate(0deg)
  transform-origin $margin-offset $margin-offset
  transition transform 2s $easeInOut

#main
  width 100%
  height 100%
  transform translate(0, 0) scale(1) rotate(0deg)
  transition $slide-transition

  &:before
    content ''
    position absolute
    background url(/images/noise.png)
    top 0
    left 0
    right 0
    bottom 0
    z-index 0

h1,
h2,
h3,
h4,
h5,
h6
  sans-serif(300)
  margin 0

h1
  sans-serif(400)
  font-size 3rem
  line-height 200%

h2
  font-size 1.8rem
  position relative
  margin-bottom 30px
  paper-heading-border()

h3
  font-size 1.5rem

h4
  font-size 1.3rem

h5
  color $paper-colour

.h1
  @extend h1

.h2
  @extend h2

.h3
  @extend h3

.h4
  @extend h4

.h5
  @extend h5

.h6
  @extend h6

em
  font-family inherit
  font-weight inherit

.icon-bg
  position absolute
  right 40px
  top 20px
  z-index 0
  font-size 4rem
  color $react-blue

  &.fa
    // opacity .2
    // text-shadow 2px 2px 0 rgba(255, 255, 255, 1), -2px -2px 0 rgba(0, 0, 0, 1)

img.icon-bg
  @extend .icon-bg
  max-height 6rem

.box
  position relative
  clearfix()
  z-index 10

  &.box-spaced
    margin-top 30px

  &.box-bottom
    position absolute
    bottom 20px
    left 15px
    right 15px
    height 100px
    text-align center

    img
      max-height 100%
      margin 0 15px

  &.flex
    display flex
    flex-direction row
    align-items center

    > .flex-child
      flex 1
      text-align center

  .half
    position relative
    width 50%
    float left

  &.centralise
    .half
      &:first-of-type
        text-align right

      &:last-of-type
        text-align left

  &.steps-h
    text-align center

    & > *
      display inline-block
      vertical-align middle

    .stacked
      .fa
        // color $react-blue

      & > *
        display block

    .arrow-icon
      // color $react-blue
      font-size 60px
      margin 0 20px

    .peace-icon
      font-size 100px

.svg-path
  position absolute
  z-index 0
  filter drop-shadow(-2px -2px 0 rgba(0, 0, 0, .3))

path
  stroke-width 20px
  stroke-dasharray 50px, 40px
  opacity .3

ul,
ol
  display block
  list-style none

ul
  & > li
    padding 8px 0
    padding-left 50px
    margin-bottom 12px
    color $body-colour-alt
    background url(/images/react-logo.png) no-repeat
    background-position 0 19px
    background-size 30px

  &.list-angular > li
    background url('/images/angular.png') no-repeat
    background-position 0 17px
    background-size 27px

  &.list-es5 > li
    background url('/images/js-logo.png') no-repeat
    background-position 0 17px
    background-size 27px

  &.list-es6 > li
    background url('/images/babel.png') no-repeat
    background-position -6px 25px
    background-size 40px

  & > ul
    padding-left 50px

    & > li
      margin-top -20px
      background url(/images/react-logo.png) no-repeat
      background-position 10px 24px
      background-size 20px

em
  font-style italic

for zindex in 0...11
  .{'z-' + zindex}
    z-index zindex

#popovers
  position fixed
  top 0
  left 0
  right 0

  .popover
    position absolute
    bottom 100%
    left 0
    right 0
    width 800px
    max-width 100%
    // max-height 600px
    box-shadow 0 0 0 0 rgba(0, 0, 0, 0)
    transform translate(0, 0)
    transition transform .4s, box-shadow .4s
    margin 0 auto
    padding 25px
    background url(/images/retina_wood.png) repeat center center
    overflow hidden
    color $paper-colour

    h4
      margin-top -15px

    img
      display block
      max-width 100%
      max-height 550px
      margin 0 auto
      box-shadow 0 2px 5px 0 rgba(0, 0, 0, .3)
      transform rotate(-.5deg)

    &.displaying
      box-shadow 0 5px 17px 0 rgba(0, 0, 0, .5)
      transform translate(0, 100%)

.vendor-logo
  max-height 150px

.center
  text-align center

.react-blue
  color $react-blue

.code
  white-space pre-wrap
  font-family 'Ubuntu Mono'

@require '_slides'
