/**
 * Slides
 */

.slide
  position absolute
  width 800px
  height 600px
  // padding 50px
  background-color $paper-bg
  // background-image url(/images/noise.png)
  // box-shadow 0 4px 10px 0 rgba(0, 0, 0, .4), inset 0 0 50px rgba(0, 0, 0, .1)
  border-radius 3px
  // margin $margin-offset
  color $paper-colour
  transform-origin 0 0

  ul
    & > li
      color $paper-colour

.pres-slide
  padding 50px
  width 100%
  opacity 0
  transition opacity .5s

  &.hero
    text-align center

    p.h1
      sans-serif(400)
      color $react-blue
      position absolute
      left 0
      right 0
      margin 0
      font-size 90px
      top 50%
      transform translateY(-50%)

#main-cont
  &.loaded
    .pres-slide
      opacity 1

#intro
  position absolute
  // top 50px
  // left 50px
  // width 100%
  height 600px

  .icon-bg
    top 100px
    font-size 11rem

#end
  position absolute
  left 0
  padding-top 40px
  // top 6500px
  // left 5000px
  // width 800px
  // height 600px
  // padding-left 50px

  h3
    margin-bottom 40px
    color $paper-colour

  .h1
    color $react-blue
    // body(400)
    line-height 80%

    &:not(:first-of-type)
      margin 15px 0

    &:last-of-type
      margin-bottom 30px

    em
      color $paper-colour

    strong
      color $paper-colour
      font-weight 700
      font-family inherit

  .h6
    color $paper-colour
    font-size 80%
    margin 0

  .icon-bg
    top 320px
    font-size 7rem
    color $paper-colour
