bg-body()
  background #59c3e0
  background -moz-linear-gradient(-45deg, #59c3e0 0, #c0d856 33%, #f2c77d 66%, #ff5151 100%)
  background -webkit-linear-gradient(-45deg, #59c3e0 0, #c0d856 33%, #f2c77d 66%, #ff5151 100%)
  background linear-gradient(135deg, #59c3e0 0, #c0d856 33%, #f2c77d 66%, #ff5151 100%)
  filter "progid:DXImageTransform.Microsoft.gradient( startColorstr='#59c3e0', endColorstr='#ff5151',GradientType=1 )"

clearfix()
  &:after
    content ""
    display table
    clear both

$margin-offset = 50px

$easeOutBack = cubic-bezier(.470, .005, .320, 1.275)
$easeInOut = ease-in-out
$easeOut = ease-out

$body-colour = #fff
$paper-bg = #f1ece0
$paper-text = #50483e
